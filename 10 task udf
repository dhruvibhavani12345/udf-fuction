    <!-- 8.  create a basic calculator using switch case. (simple function use)Ex. User input a,b and select choice + , - , * , /  -->
    <script>
        function result(){
                    let choice = prompt("enter your choice +,-,*,/");
                    let a = parseInt(prompt("enter a value is a:"));
                    let b = parseInt(prompt("enter value of b:"));
                    let ans;
                    switch (choice) {
                        case '+':
                            ans = a+b;
                            break;
                            case '-':
                            ans = a-b;
                            break;
                            case '*':
                            ans = a*b;
                            break;
                            case '/':
                            ans = a/b;
                            break;   
                    }
                    console.log("ans is", ans);
                }
                 result();
    </script>

